# Database (NEW separate database for status page)
STATUS_MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/covaera-status

# Main Platform API (the site being monitored)
MAIN_PLATFORM_URL=https://covaera.com
INTERNAL_API_KEY=your-internal-api-key

# Clerk Auth (SHARED with main app - use same keys)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=https://covaera.com/sign-in
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=https://status.covaera.com/admin

# Admin emails (comma-separated) - users who can manage incidents
ADMIN_EMAILS=admin@covaera.com

# Email Notifications (optional - uses SendGrid)
SENDGRID_API_KEY=SG.xxx
FROM_EMAIL=status@covaera.com

# Webhook Integrations (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx

# Public URL
NEXT_PUBLIC_SITE_URL=https://status.covaera.com

# Cron secret (for securing Vercel cron endpoint)
CRON_SECRET=your-cron-secret
